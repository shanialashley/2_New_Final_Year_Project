<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ombrebg"
    tools:context=".Admin.AdminAddMovie">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5B707070"
        android:orientation="vertical">


        <TextView
            android:id="@+id/movieUploads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/audiowide"
            android:gravity="center"
            android:shadowColor="@color/blue"
            android:shadowRadius="10"
            android:text="Add Movie"
            android:textAllCaps="true"
            android:textColor="@color/blue"
            android:textSize="36sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:fontFamily="@font/marko_one"
            android:hint="Title"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHighlight="@color/teal_200"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/movie_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:fontFamily="@font/marko_one"
            android:hint="Description"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHighlight="@color/teal_200"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"  />

        <EditText
            android:id="@+id/movie_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:fontFamily="@font/marko_one"
            android:hint="Genre"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHighlight="@color/teal_200"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/movie_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:fontFamily="@font/marko_one"
            android:hint="Running Time"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHighlight="@color/teal_200"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/movie_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:fontFamily="@font/marko_one"
            android:hint="Rating"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHighlight="@color/teal_200"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/movie_starring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:fontFamily="@font/marko_one"
            android:hint="Starring"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHighlight="@color/teal_200"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/movie_directors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:fontFamily="@font/marko_one"
            android:hint="Directors"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHighlight="@color/teal_200"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/movie_trailer_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:fontFamily="@font/marko_one"
            android:hint="Trailer Link"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHighlight="@color/teal_200"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/movie_type_S"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:theme="@style/CustomSpinner"
            android:popupBackground="@color/white" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/movie_upload_thumbnail"
                android:layout_width="160dp"
                android:layout_height="67dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/marko_one"
                android:text="Upload Thumbnail"
                android:textColor="@color/orange"
                android:textSize="18sp"
                app:backgroundTint="@color/blue"
                app:cornerRadius="10dp"
                app:elevation="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/orange"
                app:strokeWidth="3dp" />

            <ImageView
                android:id="@+id/movie_thumbnail"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="30dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <EditText
                android:id="@+id/movie_thumbnail_title"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:fontFamily="@font/marko_one"
                android:hint="Thumbnail"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHighlight="@color/teal_200"
                android:textColorHint="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/movie_thumbnail" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/movie_upload_cover"
                android:layout_width="129dp"
                android:layout_height="77dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/marko_one"
                android:text="Upload Cover"
                android:textColor="@color/orange"
                android:textSize="18sp"
                app:backgroundTint="@color/blue"
                app:cornerRadius="10dp"
                app:elevation="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/orange"
                app:strokeWidth="3dp" />

            <ImageView
                android:id="@+id/movie_cover"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="30dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <EditText
                android:id="@+id/movie_cover_title"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:fontFamily="@font/marko_one"
                android:hint="CoverPhoto"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHighlight="@color/teal_200"
                android:textColorHint="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/movie_cover" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/movie_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/marko_one"
            android:text="Upload "
            android:textColor="@color/orange"
            android:textSize="18sp"
            app:backgroundTint="@color/blue"
            app:cornerRadius="10dp"
            app:elevation="10dp"
            app:layout_constraintEnd_toStartOf="@+id/movie_cover"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/orange"
            app:strokeWidth="3dp" />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>